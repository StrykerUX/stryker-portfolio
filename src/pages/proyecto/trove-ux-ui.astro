<script>
// Liquid Typography Morphing Effect - SIMPLE TEST VERSION
document.addEventListener('DOMContentLoaded', function() {
  console.log('DOM loaded, starting liquid morph test');
  
  // Wait a bit for page to settle
  setTimeout(() => {
    const firstTitle = document.querySelector('.section-title');
    console.log('First title found:', firstTitle);
    
    if (!firstTitle) {
      console.log('No title found!');
      return;
    }
    
    // Prepare the title
    const text = firstTitle.textContent.trim();
    console.log('Title text:', text);
    
    firstTitle.classList.add('liquid-morph-title');
    firstTitle.innerHTML = '';
    
    // Split into letters
    text.split('').forEach((char, index) => {
      const letterSpan = document.createElement('span');
      letterSpan.classList.add('liquid-letter');
      letterSpan.textContent = char === ' ' ? '\u00A0' : char;
      letterSpan.style.animationDelay = (index * 80) + 'ms';
      firstTitle.appendChild(letterSpan);
    });
    
    console.log('Title prepared, starting animation in 1 second');
    
    // Start animation
    setTimeout(() => {
      const letters = firstTitle.querySelectorAll('.liquid-letter');
      console.log('Animating', letters.length, 'letters');
      
      letters.forEach((letter, index) => {
        setTimeout(() => {
          console.log('Animating letter', index, letter.textContent);
          letter.classList.add('morphing');
        }, index * 80);
      });
    }, 1000);
    
  }, 500);
});
</script>